{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "composite": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": ["src/**/*.spec.ts"],
  "include": ["src", "src/**/*.json"]
}
