{
  "name": "root",
  "private": true,
  "workspaces": [
    "server",
    "game"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "packages",
    "testRegex": ".*\\.spec\\.ts(x)?$",
    "transform": {
      "^.+\\.ts(x)?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts(x)?"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
