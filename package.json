{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "jest": "^27.4.3",
    "lerna": "^4.0.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "packages",
    "testRegex": ".*\\.spec\\.ts(x)?$",
    "transform": {
      "^.+\\.ts(x)?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts(x)?"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "class-validator": "^0.13.2"
  }
}
