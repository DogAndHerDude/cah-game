{
  "compilerOptions": {
    "incremental": true,
    "target": "es2019",
    "lib": ["ES2020"],
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "./packages",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
